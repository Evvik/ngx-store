{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@angular/*": [
                "node_modules/@angular/*"
            ]
        },
        "outDir": "dist",
        "declaration": true,
        "strict": false,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": ["node"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "files": [
        "public_api.ts",
        "node_modules/zone.js/dist/zone.js.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "angularCompilerOptions": {
        "genDir": "dist/src",
        "skipTemplateCodegen": true,
        "//annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "flatModuleOutFile": "ngx-store.js",
        "flatModuleId": "ngx-store"
    }
}
